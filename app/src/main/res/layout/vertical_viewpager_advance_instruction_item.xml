<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/fullImageView"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="1dp" />

        <LinearLayout
            android:translationZ="@dimen/_2sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:elevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llAdvanceInstructionTitle"
                    android:background="@color/white"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/tvInstructionTitle"
                        android:textSize="@dimen/_16ssp"
                        android:inputType="textMultiLine"
                        android:textColor="@color/Grey8"
                        android:text="Instruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:elevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llAdvanceInstructionBox"
                    android:background="@color/white"
                    android:padding="@dimen/_17sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvInstruction"
                        android:textSize="@dimen/_14ssp"
                        android:inputType="textMultiLine"
                        android:textColor="@color/Grey8"
                        android:text="Lorem ipsum dolor sit amet, pro dicam suscipiantur id, cum et omnium repudiare. Aperiri nusquam quo ea, mei in semper honestatis, per no audire pertinacia. Ei alia erat impedit ius, ei ius justo summo melius. Modo pertinacia reprimique quo ne, per eu vitae iisque, vis velit quodsi prodesset an. Sed ne nisl choro feugait, vim adhuc falli imperdiet ex. Sea id vocibus epicuri, natum nullam efficiendi ei qui. Usu graeco legimus ad. At sententiae intellegam vis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>