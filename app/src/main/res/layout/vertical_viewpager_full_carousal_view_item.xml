<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inshort_carousel_background"
    android:orientation="vertical">

    <com.fluvina.hummnew.Custom.CarouselViewPager
        android:id="@+id/vpCarousel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp" />

    <ImageView
        android:id="@+id/ivWaterBoat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_minus60sdp"
        android:layout_marginRight="@dimen/_minus60sdp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/_minus30sdp"
        android:src="@drawable/inshort_carousel_water_boat" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbDots"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:clipToPadding="true"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        android:minHeight="?attr/actionBarSize"
        app:tabMode="fixed" />

</RelativeLayout>