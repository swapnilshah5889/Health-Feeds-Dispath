<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#b4909090"
                android:startColor="#C8E0E0E0" />
            <corners
                android:bottomLeftRadius="@dimen/_50sdp"
                android:bottomRightRadius="@dimen/_50sdp" />
        </shape>
    </item>
    <item android:bottom="@dimen/_5sdp">
        <shape>
            <solid android:color="@color/transparent" />

            <corners
                android:bottomLeftRadius="@dimen/_50sdp"
                android:bottomRightRadius="@dimen/_50sdp" />
        </shape>
    </item>
</layer-list>